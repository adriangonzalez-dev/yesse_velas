<style>
	/* Contenedor de fondo para las burbujas */
	.burbujas-fondo {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		overflow: hidden;
		z-index: 1;
		pointer-events: none;
	}

	/* Estilo de cada burbuja */
	.burbuja {
		position: absolute;
		width: var(--size);
		height: var(--size);
		background: linear-gradient(135deg, var(--color-primario), var(--color-secundario));
		border-radius: 50%;
		bottom: -50px;
		left: var(--left);
		opacity: 0;
		animation: flotar var(--animDuration) infinite ease-in;
		animation-delay: var(--animDelay);
	}

	@keyframes flotar {
		0% {
			bottom: -30px;
			transform: translateX(0) rotate(0deg);
			opacity: 0;
		}
		10% {
			opacity: 0.25;
		}
		90% {
			opacity: 0.2;
		}
		100% {
			bottom: 110vh;
			transform: translateX(70px) rotate(360deg);
			opacity: 0;
		}
	}

	.contenedor {
		position: relative;
		z-index: 10;
		max-width: 500px;
		width: 80%;
		margin: 0 auto;
		text-align: center;
		padding: 2rem;
		background-color: rgba(255, 255, 255, 0.8);
		border-radius: 20px;
		box-shadow: 0 8px 32px rgba(223, 154, 197, 0.3);
		backdrop-filter: blur(5px);
	}

	.contenedor-title
	{
		display: flex;
		flex-direction: column;
		width: 100%;
		text-align: center;
		align-items: center;
		justify-content: center;
	}

	.logo {
		width: 120px;
		height: 120px;
		border-radius: 50%;
		object-fit: cover;
		margin: 0 auto 0rem;
		border: 3px solid var(--color-secundario);
		padding: 0px;
		background-color: white;
	}

	h1 {
		color: var(--color-secundario);
		margin-bottom: 0.2rem;
		font-size: 2.5rem;
		font-family: "Satisfy", cursive;
		text-shadow: 1px 1px 3px rgba(202, 105, 162, 0.3);
	}

	p {
		color: var(--color-texto);
		margin-bottom: 2rem;
		line-height: 1.5;
	}

	.enlaces {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.enlace {
		display: flex;
		align-items: center;
		justify-content: center;
		text-decoration: none;
		padding: 0.8rem;
		border-radius: 12px;
		background-color: var(--color-primario);
		color: white;
		font-weight: 600;
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
		box-shadow: 0 4px 8px rgba(202, 105, 162, 0.3);
	}

	.enlace:hover {
		transform: translateY(-3px) scale(1.02);
		background-color: var(--color-secundario);
		box-shadow: 0 6px 12px rgba(202, 105, 162, 0.5);
	}

	.enlace:hover:before {
		transform: translateX(100%);
	}

	.enlace:before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			90deg,
			transparent,
			rgba(255, 255, 255, 0.2),
			transparent
		);
		transition: transform 0.6s ease;
	}

	.enlace svg {
		margin-right: 10px;
	}

	.footer {
		color: var(--color-secundario);
		margin-top: 2rem;
		font-size: 0.8rem;
	}
</style>